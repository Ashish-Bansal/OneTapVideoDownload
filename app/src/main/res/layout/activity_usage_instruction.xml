<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.UsageInstruction">

    <com.phantom.onetapvideodownload.ui.views.InstagramView
        android:id="@+id/instagramView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/menu_item_usage_instruction_title"
        android:textColor="@color/white"
        android:padding="20sp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:autoLink="web"
        android:linksClickable="true" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:scrollbars="vertical"
        android:paddingLeft="20sp"
        android:paddingRight="20sp"
        android:lineSpacingMultiplier="1.5"
        android:text="@string/usage_instruction_summary"
        android:textColor="@color/white"
        android:textSize="15sp"/>
</RelativeLayout>
